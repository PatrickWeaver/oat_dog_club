<% provide(:title, @user.name) %>
  
  <div class="user-profile background">
    <div id="profile-container">
      <h1>
      <%= @user.name %>
      </h1>
      <div id="user-info-profile">
      <% if @user.profile_picture.url != '' %>
        <img src="<%= @user.profile_picture.url %>" height="200" >
      <% end %>
      </div>
      <div id="user-zines-profile">
        <% if @zines.any? %><h2>_ &nbsp;&nbsp;_ &nbsp;&nbsp;&nbsp;Zines&nbsp;&nbsp;&nbsp;_&nbsp;&nbsp; _</h2>
          <ul class="user-zines">
            <%=  render partial: 'zines/zine', collection: @zines %>
          </ul>
        <% else %>
        <% if current_user %><% if current_user == @user %><h2>No zines yet, start creating!</h2><% end %><% end %>
        <% end %>
      </div>
    </div>
  </div>
<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
      <%= @user.name %>
      </h1>
      <h1>
      URL: <%= @user.profile_picture.url %>
      </h1>
            <h1>
      email: <%= @user.email %>
      </h1>
            <h1>
      PW: <%= @user.password %>
      </h1>


      <% if @user.profile_picture.url != '' %>
        <img src="<%= @user.profile_picture.url %>" height="200" >
        <h1>
      <% end %>
        <% if @zines.any? %>
          <ul>
            <%=  render partial: 'shared/zine', collection: @zines %>
          </ul>
        <% end %>
      </h1>
    </section>
  </aside>
</div>
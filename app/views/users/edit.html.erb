<% provide(:title, "Edit user") %>
<h1>Update your membership</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name, "Your name here:" %>
      <%= f.text_field :name %>

      <%= f.label :email, "Your electronic mail address:" %>
      <%= f.text_field :email %>

      <%= f.label :password, "Password, shh! Secret!:" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Password one more time, I know, just do it:" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>
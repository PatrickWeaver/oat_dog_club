<div class="edit-zine-content-form <% if @cover %>yes<% else %>no<% end %>-cover">
  <small class="zine-content-close-box"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></small>

  <%= form_for(@zine) do |f| %>
    <div class="field close-box-field">
      <%= f.text_area :title, :placeholder => @zine.title %>
    </div>
    <button type"button" class="btn btn-large btn-success toggle-boolean form-button">
        <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span>&nbsp;&nbsp;Save
    </button>
  <% end %>
  <br>
  <% if @zine.show_title %>
    <%= link_to '<span class="glyphicon glyphicon-eye-close" aria-hidden="true"></span>&nbsp;&nbsp;Hide!'.html_safe, {controller: "zines", action: "title"}, :class => "toggle-boolean btn btn-xs btn-danger" %>
  <% else %>
    <%= link_to '<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>&nbsp;&nbsp;Show!'.html_safe, {controller: "zines", action: "title"}, :class => "toggle-boolean btn btn-xs btn-success" %>
  <% end %>
</div>
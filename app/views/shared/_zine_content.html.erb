<%= content_tag_for( :li, zine_content, class: "zine-content",  ) do %>

  <% if zine_content.orderable %>

    <% if zine_content.orderable_type == "Paragraph" %>

      <%= render partial: 'shared/paragraph', :locals => {paragraph: zine_content.orderable } %>

    <% end %>

    <% if zine_content.orderable_type == "Image" %>

      <ul class="zines">
      <%= render partial: 'shared/image', :locals => {image: zine_content.orderable } %>
      </ul>
    <% end %>

  <% end %>
<% end %>


